<h2 class="mx-auto text-center mb-5">{{profile.username}}'s Profile</h2>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body p-0">
                <ul class="list-group list-group-flush recipeList">
                    {{#if recipe}}
                    {{#each recipe}}
                    <a href="/recipes/showcase/{{this.name}}" class="list-group-item list-group-item-action text-center">{{this.name}}</a>
                    {{/each}}
                    {{else}}
                    <li class="list-group-item text-center">{{profile.username}} has no recipes</li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </div>








