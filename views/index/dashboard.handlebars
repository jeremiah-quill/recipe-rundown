<h2 class="mx-auto text-center page-title mb-5">{{user.username}}'s Dashboard</h2>
<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-body p-0">
                <ul class="list-group list-group-flush recipeList">
                    {{#if recipe}}
                    {{#each recipe}}
                    <a href="/recipes/showcase/{{name}}" class="list-group-item list-group-item-action text-center">{{name}}</a>
                    {{/each}}
                    {{else}}
                    <li class="list-group-item text-center">You have no recipes</li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card mb-5">
            <div class="card-header">
            Following
            </div>
            <ul class="list-group list-group-flush recipeList">
                {{#if user.following}}
                {{#each user.following}}
                <a href="/profile/{{_id}}" class="list-group-item list-group-item-action">{{username}}</a>
                {{/each}}
                {{else}}
                <li class="list-group-item">You are not following anyone</li>
                {{/if}}
            </ul>
        </div>
    </div>
</div>

