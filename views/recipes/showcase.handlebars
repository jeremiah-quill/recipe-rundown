
<div class="card">
    <div class="card-header d-flex">

        {{#if user}}
        <a href="/recipes/{{recipe.id}}" class="btn mr-3"><i class="fa fa-star" style="color: gold"></i></a>
        {{/if}}
        
        
        <h4 class="showcaseTitle">{{recipe.name}}</h4>  <a href="/profile/{{recipe.userId}}" class="btn ml-4 showcaseUser">More from {{recipe.username}}</a>
    
{{!-- <div class="ml-auto">
<a href="/profile/{{recipe.userId}}" class="ml-auto"><button class="btn btn-primary">More from {{recipe.username}}</button></a>    
</div> --}}
</div>

    <div class="card-body pt-4">
        <div class="row">
            <div class="col-md-4 whatINeed">
                <h5 class="text-center mb-3">What you need</h5>
                    {{{arrayLoop recipe.ingredients.quantity recipe.ingredients.measurement recipe.ingredients.name}}}
            </div>
            <div class="col-md-8">
                <h5 class="text-center mb-3">What to do</h5>
                <ol>
                    {{#each recipe.instructions}}
                    <li>{{this}}</li>
                    {{/each}}
                </ol>
            </div>
        </div>
        <hr>
        {{!-- <div class="row">
            <div class="col-md-12 text-center">
                <h5>What I think</h5>           
                Notes will go here
            </div>
        </div> --}}
    </div>
</div>
        {{#if user}}
            <a href="/recipes/add" class="btn btn-lg btn-info addRecipeFloat">Create a Recipe</a>
        {{/if}}